extends layout 

block content 

    h1=title 
        from(method='post', action='/users/cadastro')
            .from-group 
                label(for='nome') Nome: 
                input(type='text', name='nome', class='form-control', placeholder='Digite o nome', required)
            .form-group 
                label(for='disciplina') Disciplina: 
                input(type='texxt', name='disciplina', class='form-control', placeholder='Digite a disciplina', required)
            button.btn.btn-primary(type='submit') Cadastrar Professor